# Logging
{% if collectd_logpath %}
LoadPlugin logfile
<Plugin logfile>
        LogLevel "{{collectd_loglevel}}"
        File "{{collectd_logpath}}"
        Timestamp true
</Plugin>
{% else %}
LoadPlugin syslog
<Plugin syslog>
        LogLevel "{{collectd_loglevel}}"
        NotifyLevel "OKAY"
</Plugin>
{% endif %}

